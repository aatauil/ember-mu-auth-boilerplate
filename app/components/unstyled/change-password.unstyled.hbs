<h3>Change your password</h3>

<label for="current">Current password</label>
<Input @type="password" @value={{this.currentPassword}} name="current" id="current" />
<label for="new">New password</label>
<Input @type="password" @value={{this.newPassword}} name="new" id="new" />
<label for="confirm">Confirm password</label>
<Input @type="password" @value={{this.confirmPassword}} name="confirm" id="confirm" />

{{#if this.error}}
  <h3>
    {{this.error}}
  </h3>
{{/if}}

{{#if this.success}}
  <h3>
    {{this.success}}
  </h3>
{{/if}}

{{#if this.hasValues}}
  <button type="button" {{ on 'click' this.changePassword }}>
    Save
  </button>
{{else}}
  <button type="button" disabled="true">
    Save
  </button>
{{/if}}